# üîê PRODUCTION ENVIRONMENT CONFIGURATION
# ‚ö†Ô∏è  CRITICAL: Change ALL values before deploying to production!

# === BASIC CONFIGURATION ===
TZ=UTC
PORT=3333
HOST=0.0.0.0
NODE_ENV=production
LOG_LEVEL=info

# === SECURITY - CRITICAL ===
# Generate with: node ace generate:key
APP_KEY=CHANGE_ME_GENERATE_WITH_node_ace_generate:key

# === SESSION SECURITY ===
SESSION_DRIVER=redis
COOKIE_SECURE=true
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=strict
SESSION_COOKIE_NAME=infinity_session
SESSION_MAX_AGE=7d

# === DATABASE - PostgreSQL Required ===
DB_CONNECTION=postgres
DB_HOST=your-postgres-host
DB_PORT=5432
DB_USER=infinity_prod
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD_MIN_32_CHARS
DB_DATABASE=infinity_production
DB_SSL=true

# === REDIS - Required for sessions & cache ===
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_STRONG_PASSWORD_MIN_32_CHARS
REDIS_TLS=true

# === TRANSMIT (WebSockets) ===
TRANSMIT_APP_KEY=CHANGE_ME_RANDOM_STRING_MIN_32_CHARS

# === MONITORING - Sentry ===
SENTRY_DSN=https://your-key@o123456.ingest.sentry.io/project-id
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# === FILE STORAGE ===
DRIVE_DISK=s3
S3_KEY=CHANGE_ME_AWS_ACCESS_KEY
S3_SECRET=CHANGE_ME_AWS_SECRET_KEY
S3_BUCKET=infinity-production
S3_REGION=us-east-1

# === VITE (Frontend) ===
VITE_APP_NAME=Infinity Game
VITE_API_URL=https://api.yourdomain.com

# === CORS ===
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com
CORS_CREDENTIALS=true

# === EMAIL (Optional) ===
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USERNAME=your-email@domain.com
SMTP_PASSWORD=CHANGE_ME_EMAIL_PASSWORD
SMTP_FROM_EMAIL=noreply@yourdomain.com
SMTP_FROM_NAME=Infinity Game

# === OPTIONAL SERVICES ===
# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=15m
