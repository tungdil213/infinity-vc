{
  "name": "@infinity/app",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "license": "UNLICENSED",
  "description": "Infinity Gauntlet Love Letter - Multiplayer Game Backend",
  "scripts": {
    "start": "NODE_ENV=production node bin/server.js",
    "build": "node ace build",
    "clean": "rm -rf .turbo node_modules build",
    "dev": "node ace serve --hmr",
    "test": "node ace test",
    "test:watch": "node ace test --watch",
    "test:coverage": "c8 --include=app/** --exclude=app/**/*.spec.ts node ace test",
    "test:unit": "node ace test tests/unit",
    "test:integration": "node ace test tests/integration",
    "test:functional": "node ace test tests/functional",
    "lint": "eslint .",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit"
  },
  "imports": {
    "#controllers/*": "./app/controllers/*.js",
    "#contracts/*": "./app/contracts/*.js",
    "#exceptions/*": "./app/exceptions/*.js",
    "#factories/*": "./database/factories/*.js",
    "#models/*": "./app/models/*.js",
    "#mails/*": "./app/mails/*.js",
    "#services/*": "./app/services/*.js",
    "#listeners/*": "./app/listeners/*.js",
    "#middleware/*": "./app/middleware/*.js",
    "#validators/*": "./app/validators/*.js",
    "#providers/*": "./providers/*.js",
    "#policies/*": "./app/policies/*.js",
    "#abilities/*": "./app/abilities/*.js",
    "#database/*": "./database/*.js",
    "#repositories/*": "./app/repositories/*.js",
    "#utils/*": "./app/utils/*.js",
    "#tests/*": "./tests/*.js",
    "#start/*": "./start/*.js",
    "#config/*": "./config/*.js",
    "#infrastructure/*": "./app/infrastructure/*.js",
    "#shared_kernel/*": "./app/shared_kernel/*.js",
    "#domains/*": "./app/domains/*.js",
    "#iam/*": "./app/domains/iam/*.js",
    "#lobby/*": "./app/domains/lobby/*.js",
    "#game/*": "./app/domains/game_engine/*.js",
    "#integration/*": "./app/integration/*.js"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.8.2",
    "@adonisjs/eslint-config": "^2.1.2",
    "@adonisjs/prettier-config": "^1.4.5",
    "@adonisjs/tsconfig": "^1.4.1",
    "@japa/assert": "^4.1.1",
    "@japa/plugin-adonisjs": "^4.0.0",
    "@japa/runner": "^4.4.0",
    "@poppinss/file-generator": "^2.1.5",
    "@stryker-mutator/core": "^9.1.1",
    "@stryker-mutator/typescript": "^4.0.0",
    "@swc/core": "1.10.17",
    "@types/luxon": "^3.7.1",
    "@types/node": "^22.18.0",
    "@types/uuid": "^11.0.0",
    "@vitejs/plugin-react": "^4.7.0",
    "better-sqlite3": "^11.10.0",
    "c8": "^10.1.3",
    "eslint": "^9.34.0",
    "hot-hook": "^0.4.0",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.6.2",
    "sinon": "^21.0.0",
    "sinon-test": "^3.1.6",
    "ts-node-maintained": "^10.9.6",
    "typescript": "~5.7.3"
  },
  "dependencies": {
    "@adonisjs/auth": "^9.4.2",
    "@adonisjs/core": "^6.19.0",
    "@adonisjs/cors": "^2.2.1",
    "@adonisjs/drive": "^3.4.1",
    "@adonisjs/inertia": "^3.1.1",
    "@adonisjs/lucid": "^21.8.0",
    "@adonisjs/session": "^7.5.1",
    "@adonisjs/shield": "^8.2.0",
    "@adonisjs/static": "^1.1.1",
    "@adonisjs/transmit": "^2.0.2",
    "@adonisjs/transmit-client": "^1.0.0",
    "@adonisjs/vite": "^4.0.0",
    "@inertiajs/core": "2.1.3",
    "@inertiajs/react": "^2.0.0",
    "@sentry/node": "^10.22.0",
    "@sentry/profiling-node": "^10.22.0",
    "@tailwindcss/vite": "^4.1.12",
    "@tyfo.dev/ui": "workspace:*",
    "@vinejs/vine": "^3.0.1",
    "edge.js": "^6.3.0",
    "lucide-react": "^0.475.0",
    "luxon": "^3.7.1",
    "pino": "^10.1.0",
    "reflect-metadata": "^0.2.2",
    "sonner": "^2.0.7",
    "tailwindcss": "^4.1.12",
    "uuid": "^13.0.0"
  },
  "peerDependencies": {
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "vite": "^6.1.1"
  },
  "hotHook": {
    "boundaries": [
      "./app/controllers/**/*.ts",
      "./app/middleware/*.ts"
    ]
  },
  "prettier": "@adonisjs/prettier-config"
}
