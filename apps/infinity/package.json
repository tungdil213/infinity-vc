{
  "name": "@infinity/app",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "license": "UNLICENSED",
  "description": "Infinity Gauntlet Love Letter - Multiplayer Game Backend",
  "scripts": {
    "start": "NODE_ENV=production node bin/server.js",
    "build": "node ace build",
    "clean": "rm -rf .turbo node_modules build",
    "dev": "node ace serve --hmr",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:adonisjs": "node ace test",
    "test:adonisjs:coverage": "c8 --include=app/** --exclude=app/**/*.spec.ts node ace test",
    "lint": "eslint .",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit"
  },
  "imports": {
    "#controllers/*": "./app/controllers/*.js",
    "#contracts/*": "./app/contracts/*.js",
    "#exceptions/*": "./app/exceptions/*.js",
    "#factories/*": "./database/factories/*.js",
    "#models/*": "./app/models/*.js",
    "#mails/*": "./app/mails/*.js",
    "#services/*": "./app/services/*.js",
    "#listeners/*": "./app/listeners/*.js",
    "#events/*": "./app/events/*.js",
    "#middleware/*": "./app/middleware/*.js",
    "#validators/*": "./app/validators/*.js",
    "#providers/*": "./providers/*.js",
    "#policies/*": "./app/policies/*.js",
    "#abilities/*": "./app/abilities/*.js",
    "#database/*": "./database/*.js",
    "#repositories/*": "./app/repositories/*.js",
    "#utils/*": "./app/utils/*.js",
    "#tests/*": "./tests/*.js",
    "#start/*": "./start/*.js",
    "#config/*": "./config/*.js",
    "#infrastructure/*": "./app/infrastructure/*.js",
    "#domain/*": "./app/domain/*.js",
    "#application/*": "./app/application/*.js"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.8.2",
    "@adonisjs/eslint-config": "^2.0.0",
    "@adonisjs/prettier-config": "^1.4.0",
    "@adonisjs/tsconfig": "^1.4.0",
    "@japa/assert": "^4.0.1",
    "@japa/plugin-adonisjs": "^4.0.0",
    "@japa/runner": "^4.2.0",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "@poppinss/file-generator": "^2.1.4",
    "@stryker-mutator/core": "^9.0.1",
    "@stryker-mutator/typescript": "^4.0.0",
    "@swc/core": "1.10.17",
    "@types/luxon": "^3.4.2",
    "@types/node": "^22.13.5",
    "@vitejs/plugin-react": "^4.3.4",
    "better-sqlite3": "^11.10.0",
    "c8": "^10.1.3",
    "eslint": "^9.21.0",
    "hot-hook": "^0.4.0",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.5.2",
    "sinon": "^21.0.0",
    "sinon-test": "^3.1.6",
    "ts-node-maintained": "^10.9.5",
    "typescript": "~5.7.3"
  },
  "dependencies": {
    "@adonisjs/auth": "^9.3.1",
    "@adonisjs/core": "^6.17.2",
    "@adonisjs/cors": "^2.2.1",
    "@adonisjs/drive": "^3.4.1",
    "@adonisjs/inertia": "^3.1.0",
    "@adonisjs/lucid": "^21.6.0",
    "@adonisjs/session": "^7.5.1",
    "@adonisjs/shield": "^8.1.2",
    "@adonisjs/static": "^1.1.1",
    "@adonisjs/vite": "^4.0.0",
    "@inertiajs/react": "^2.0.3",
    "@tailwindcss/vite": "^4.0.8",
    "@tyfo.dev/ui": "workspace:*",
    "@vinejs/vine": "^3.0.0",
    "edge.js": "^6.2.1",
    "luxon": "^3.5.0",
    "reflect-metadata": "^0.2.2",
    "tailwindcss": "^4.0.8"
  },
  "peerDependencies": {
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "vite": "^6.1.1"
  },
  "hotHook": {
    "boundaries": [
      "./app/controllers/**/*.ts",
      "./app/middleware/*.ts"
    ]
  },
  "prettier": "@adonisjs/prettier-config"
}
