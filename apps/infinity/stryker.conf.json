{
  "$schema": "https://raw.githubusercontent.com/stryker-mutator/stryker/master/packages/api/schema/stryker-schema.json",
  "packageManager": "pnpm",
  "reporters": [
    "html",
    "clear-text",
    "progress"
  ],
  "testRunner": "command",
  "commandRunner": {
    "command": "pnpm run test:mutation"
  },
  "coverageAnalysis": "perTest",
  "concurrency": 1,
  "timeoutMS": 300000,
  "timeoutFactor": 4,
  "maxConcurrentTestRunners": 1,
  "maxTestRunnerReuse": 1,
  "tsconfigFile": "tsconfig.json",
  "mutationRange": {
    "start": { "line": 20, "column": 0 },
    "end": { "line": 25, "column": 0 }
  },
  "mutate": [
    "app/services/folder_service.ts",
    "!app/services/*.d.ts"
  ],
  "ignorePatterns": [
    "node_modules",
    "build",
    "coverage",
    "tests",
    "tmp"
  ],
  "thresholds": {
    "high": 80,
    "low": 60,
    "break": 50
  },
  "plugins": []
}
