{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["package.json", "pnpm-lock.yaml"],
	"tasks": {
		"clean": {
			"cache": false
		},
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"]
		},
		"build:ui": {
			"inputs": ["packages/ui/src/**/*", "packages/ui/tailwind.config.js"],
			"outputs": ["packages/ui/dist/**"]
		},
		"build:adonis": {
			"inputs": ["apps/infinity/**"],
			"outputs": ["apps/infinity/build/**"],
			"dependsOn": ["^build"],
			"cache": true
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"typecheck": {
			"dependsOn": ["^build"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"test": {
			"dependsOn": ["^build"]
		},
		"preview-storybook": {
			"dependsOn": ["^build"],
			"cache": false
		}
	}
}
